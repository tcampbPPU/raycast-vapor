{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "laravel-vapor",
  "title": "laravel-vapor",
  "description": "Interacts with Laravel Vapor API",
  "icon": "command-icon.png",
  "author": "tcampbPPU",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show List and Detail",
      "description": "Template for showing a static list and a detail view",
      "mode": "view"
    },
    {
      "name": "list-teams",
      "title": "List Teams",
      "description": "List all teams",
      "mode": "view"
    },
    {
      "name": "list-projects",
      "title": "List Projects",
      "description": "List projects for the selected team",
      "mode": "view"
    }    
  ],
  "preferences": [
    {
      "name": "vapor_token",
      "type": "password",
      "required": true,
      "title": "Vapor Token",
      "description": "In Vapor go to My Profile > API > Generate API Token > Add",
      "placeholder": "token_123",
      "link": "https://vapor.laravel.com/ap/account/api-tokens"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.49.3",
    "@raycast/utils": "^1.5.2",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
